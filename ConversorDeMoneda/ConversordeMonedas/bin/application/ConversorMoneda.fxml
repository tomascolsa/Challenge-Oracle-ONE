<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>


<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ConversorMonedaController">
    <children>
        <VBox layoutX="40.0" layoutY="60.0" spacing="10" alignment="CENTER" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0">
            <Label text="Seleccione una opción de conversión:" />
            <ComboBox fx:id="comboBox" prefWidth="180.0" />
            <Label text="Ingrese la cantidad de divisa:" />
            <TextField fx:id="txtCantidad" prefWidth="100.0" />
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="btnConvertir" mnemonicParsing="false" text="Convertir" onAction="#handleConvertir" />
                <Button fx:id="btnCancelar" mnemonicParsing="false" text="Cancelar" onAction="#handleCancelar" />
                <Button fx:id="btnRegresar" mnemonicParsing="false" text="Regresar" onAction="#handleRegresar" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
